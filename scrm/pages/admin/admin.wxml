<!--pages/admin/admin.wxml-->
<!-- 提示 -->
<view class='head'>
  <view class='head_view'>
    <view class='head_view_view'>
      状态:<text>正在进行/全部</text>
      <text class='head_view_view_text2'>筛选</text>
    </view>
  </view>
</view>
<!-- 滑动区域 -->
<view class='slippage'>
  <scroll-view class='slippage_view'>
    <!-- 循环区 -->
    <view class='slippage_view_view'>
        <!-- 图片数据 -->
      <view style='width:100%;height:60%;display: flex;align-items:flex-end;'>
        <!-- 图片 -->
        <view class='slippage_parallel_view1'>
        </view>
        <!-- 数据 -->
        <view class='slippage_parallel_view2'>
          <text class='slippage_parallel_view2_text1'>IT新人报道\n</text>
          <text class='slippage_parallel_view2_text2'>活动时间:2017.9.21、2017.9.22\n</text>
          <text class='slippage_parallel_view2_text2'>活动内容:发送量达斯空军和反馈看到了赛季阿里大家了解</text>
        </view>
      </view>
      <!-- 拍照 -->
      <view class='slippage_pictures_view'>
        <text class='slippage_pictures_view_text'>拍照</text>
      </view>
      <!-- 各种按钮 -->
      <view class='slippage_pictures_buttom'>
        <view class='slippage_pictures_buttom_view'>考勤状况</view>
        <view class='slippage_pictures_buttom_view' style='border-left:1px solid #cccccc;border-right: 1px solid #cccccc;'>生成代理码</view>
        <view class='slippage_pictures_buttom_view'>生成二维码</view>
      </view>
    </view>
  </scroll-view>
</view>